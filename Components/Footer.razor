            <div class="flex w-[50%] flex-col items-end text-end">
                <NavLink class="w-fit transition-colors duration-300 hover:text-ghibli-black active:text-ghibli-black dark:hover:text-ghibli-white dark:active:text-ghibli-white" href="/me">@L["NavAboutmeWhoAmI"]</NavLink>
