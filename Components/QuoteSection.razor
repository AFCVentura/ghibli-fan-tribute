@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> L

<section class="text-ghibli-black grid h-dvh grid-rows-[1fr_auto] select-none dark:text-ghibli-white">
    <div class="grid h-auto grid-rows-[1fr_auto_1fr] items-center justify-center">
        <div class="row-start-2 w-full">
            <div class="row-start-2 flex w-[80vw] max-w-fit flex-col gap-2">
                <div class="font-ghibli-lemon-milk w-fit text-justify text-2xl md:text-3xl">
                    <span>@L["QuotePhrase"]</span>
                </div>
                <div class="font-ghibli-lemon-milk-light text-right text-lg md:text-xl">
                    <p>@L["QuoteAuthor"] -</p>
                </div>
            </div>
        </div>
        <div class="row-start-3 flex h-full items-end justify-center gap-0">
            <div class="text-ghibli-black w-[60vw] gap-0 lg:w-[30vw] dark:border-ghibli-white dark:text-ghibli-white">
                <img src="images/totoro.png" alt="Ghibli Logo" class="mx-auto my-0 w-36 md:w-48 dark:invert 3xl:w-36" draggable="false" />
            </div>
        </div>
    </div>
    <div class="border-ghibli-black row-start-2 flex h-fit items-end justify-center border-b-[3px] pb-14 dark:border-ghibli-white">
        <div class="border-ghibli-black w-[60vw] border-b-[3px] lg:w-[30vw] dark:border-ghibli-white">
        </div>
    </div>
</section>
